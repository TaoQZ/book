{
    "title": "Peace & Love",
    "description": "TaoQZ",
    "author": "TaoQZ",
    "output.name": "site",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "root": ".",
    "links": {
        "sidebar": {
               "Home": "https://taoqz.top/"
        }
    },
    "plugins": [
        "expandable-chapters",
		"disqus",
        "github@^2.0.0",
        "anchors@^0.7.1",
        "include-codeblock@^3.0.2",
        "splitter@^0.0.8",
        "tbfed-pagefooter@^0.0.1",
        "expandable-chapters-small@^0.1.7",
        "anchor-navigation-ex@0.1.8",
        "-sharing", 
		"sharing-plus",
		"multipart",
		"baidu-tongji",
		"ga",
        "edit-link@^2.0.2",
        "-lunr",
        "-search", 
        "search-pro",
        "search-plus",
        "code",
        "insert-logo",
        "favicon",
        "popup"

    ],

    "pluginsConfig": {
		"disqus": {
		  "shortName": "taoqz"
		},
		   "edit-link": {
            "base": "https://github.com/TaoQZ/book/blob/master",
            "label": "Edit This Page"
        },
		 "baidu-tongji": {
            "token": "547fd35e117e03eb20cde8415b55ab18",
			 "url":"https://hm.baidu.com/hm.js"
        },
		"ga": {
            "token": "UA-145587281-1"
        },
      
        "github": {
            "url": "https://taoqz.github.io"
        },
        "include-codeblock": {
            "template": "ace",
            "unindent": true,
            "edit": true
        },
        "tbfed-pagefooter": {
            "copyright": "Copyright © TaoQZ 2019",
            "modify_label": "作者联系方式：taoqingzhou@gmail.com 修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
      
        "anchor-navigation-ex": {
            "isRewritePageTitle": false,
            "tocLevel1Icon": "fa fa-hand-o-right",
            "tocLevel2Icon": "fa fa-hand-o-right",
            "tocLevel3Icon": "fa fa-hand-o-right"
        },
		"sharing": {
            "douban": false,
            "facebook": false,
            "google": false,
            "hatenaBookmark": false,
            "instapaper": false,
            "line": false,
            "linkedin": false,
            "messenger": false,
            "pocket": false,
            "qq": true,
            "qzone": true,
            "stumbleupon": false,
            "twitter": false,
            "viber": false,
            "vk": false,
            "weibo": false,
            "all": [
                "facebook", "google", "twitter",
                "qq",
                "qzone"
            ]
        },
         "favicon": {
            "shortcut": "/img/header/favicon.ico",
            "bookmark": "/img/header/favicon.ico"  
        },
        "insert-logo": {
            "url": "/img/header/header.jpg",
            "style": "background: none; max-height: 100px; min-height: 100px"
        }		

    }
}
